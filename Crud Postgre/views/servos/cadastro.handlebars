<h2>Cadastro de Servos</h2>

<form action="/servos/cadastro" method="post">

    <label for="nome">Nome: </label>
    <input class="form-control" type="text" name="nome" id="nome">
    <label for="classe">Classe: </label>
    <input class="form-control" type="text" name="classe" id="classe">
    <label for="idade">Idade: </label>
    <input class="form-control" type="text" name="idade" id="idade">

    <label for="mestres">Mestres: </label>

    <select class="form-control" name="mestres">
        <option id="mestres" value="0">Selecione o Mestre (se haver)</option>
        {{#each mestres}}
        <option id="mestres" value="{{id}}">{{nome}}</option>
        {{else}}
        <option value="0">Nenhum mestre registrado</option>
        {{/each}}
    </select>

    <button class="btn btn-success mt-4 mt-2 px-3">Cadastrar</button>
    <a href="/servos/home" class="btn btn-danger mt-4 mt-2 ms-2 px-3">Cancelar</a>
</form>

